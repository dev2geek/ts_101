{
  "name": "jest-a",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "jest": "jest",
    "jest-cov": "jest --coverage",
    "test": "mocha",
    "test-cov": "nyc mocha"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "typescript": "^2.5.3"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/jest": "^21.1.3",
    "@types/mocha": "^2.2.43",
    "chai": "^4.1.2",
    "jest": "^21.2.1",
    "mocha": "^4.0.1",
    "nyc": "^11.2.1",
    "source-map-support": "^0.5.0",
    "ts-jest": "^21.1.2",
    "ts-node": "^3.3.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "text-summary",
      "json",
      "html"
    ],
    "all": true
  }
}
