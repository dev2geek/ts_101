{
  "name": "ts_101",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "jest": "jest",
    "jest-cov": "jest --coverage",
    "test": "mocha",
    "test-cov": "nyc --all mocha",
    "clean": "rm -rf ./dist/**",
    "ci": "npm run jest",
    "ci-cov": "npm run jest-cov"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "typescript": "^2.5.3"
  },
  "devDependencies": {
    "@types/jest": "^21.1.3",
    "@types/reflect-metadata": "0.0.5",
    "coveralls": "^3.0.0",
    "jest": "^21.2.1",
    "lerna": "^2.4.0",
    "reflect-metadata": "^0.1.10",
    "ts-jest": "^21.1.2",
    "tslint": "^5.7.0",
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.43",
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "nyc": "^11.2.1",
    "source-map-support": "^0.5.0",
    "ts-node": "^3.3.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.test\\.ts$",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "packages/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "nyc": {
    "include": [
      "packages/**/*.ts",
      "packages/jest-b/src/base/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.test.ts"
    ],
    "reporter": [
      "text",
      "json",
      "html"
    ],
    "recursive": true,
    "all": true
  }
}
